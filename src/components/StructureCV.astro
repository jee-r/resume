---
// import Contact from "./Contact.astro";
import Educations from "./Educations.astro";
import Works from "./Works.astro";
import Hobbies from "./Hobbies.astro";
import Projects from "./Projects.astro";
import Skills from "./Skills.astro";
import SocialLinksV2 from "./SocialLinksV2.astro";

const { lang } = Astro.props;
---

<div class="flex w-full h-full gap-4 px-4 mt-2 text-zinc-800">
  <div class="flex basis-1/3 w-full h-full">
    <div class="flex flex-col">
      <SocialLinksV2 />
      <Skills {lang} />
      <Works {lang} />
      <Hobbies {lang} />
    </div>
  </div>
  <div class="flex basis-2/3 w-full h-full">
    <div class="flex flex-col">
      <Projects {lang} />
      <Educations {lang} />
    </div>
  </div>
</div>
