---
const { lang } = Astro.props;

import * as config from "../content/_config.md";
const {
  firstname,
  name,
  job,
  aboutText,
  localization,
  website,
  email,
  github,
  linkedin,
} = config.frontmatter;
const website_url = new URL(website);

import LayeredBg from "../assets/layered-steps-haikei.svg";
import Link from "./icons/Link.astro";
import Mail from "./icons/Mail.astro";
import Map from "./icons/Map.astro";
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
const svgBg = `url(${LayeredBg.src})`;
---

<style define:vars={{ svgBg }}>
  .layered-bg {
    background-image: var(--svgBg);
    background-size: contain;
    background-position: left top;
    background-repeat: no-repeat;
  }
</style>

<section>
  <div class="flex items-center">
    <!-- <div class="bg-pink-500 h-52 basis-1/3 p-8 rounded-[10%] overflow-hidden"></div>
      IMAGE
    </div> -->
    <div class="layered-bg self-stretch basis-1/12 mr-4"></div>
    <div class="">
      <div class="text-4xl font-semibold">
        <div class="text-gray-800 py-1">{`${firstname} ${name}`}</div>
        <div class="text-gray-500">{`${job[lang]}`}</div>
      </div>
      <div class="text-gray-700">
        {`${aboutText[lang]}`}
      </div>
      <div class="flex mt-2 text-gray-800 text-sm">
        <a
          href={website_url}
          class="flex justify-center items-center pr-4 border-r"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Link class="h-4 w-4 mr-1" />
          {website_url.hostname}
        </a>
        <a href={`mailto:${email}`} class="flex items-center px-4 border-r">
          <Mail class="h-4 w-4 mr-1" />
          {email}
        </a>
        <div class="flex items-center px-4 border-r">
          <Map class="h-4 w-4 mr-1" />
          {localization}
        </div>
        <a href={github.url} class="flex items-center px-4 border-r">
          <Github class="h-4 w-4 mr-1" />
          {github.name}
        </a>
        <a href={linkedin.url} class="flex items-center pl-4 border-l">
          <Linkedin class="h-4 w-4 mr-1" />
          <span>{linkedin.name}</span>
        </a>
      </div>
    </div>
  </div>
</section>
