---
import { Image } from 'astro:assets'

const { lang } = Astro.props;

import * as config from "../content/_config.md";
const { firstname, name, job, aboutText, website } = config.frontmatter;
const website_url = new URL(website);

import profile_image from '../assets/profile_rounded.png'
import LayeredBg from "../assets/layered-steps-haikei.svg";
// import SocialLinks from "./SocialLinks.astro";
// import LayerSvgX from "./LayerSvgX.astro";
import Profile from "./Profile.astro";
const svgBg = `url(${LayeredBg.src})`;
---

<style define:vars={{ svgBg }}>
  .layered-bg {
    background-image: var(--svgBg);
    background-size: contain;
    background-position: left top;
    background-repeat: no-repeat;
  }
</style>

<section>
    <div class="flex w-full h-full gap-4">
    <!-- <div class="layered-bg self-stretch basis-1/3"></div> -->
    <div class="flex justify-center items-center basis-1/3 drop-shadow-2xl">
        <div class="outline outline-offset-4 outline-sky-500 rounded-full">
          <Image
            src={profile_image}
            alt="profile picture"
            width={160}
            height={160}
            decoding="async"
            loading="lazy"
            class=""
          >
        </div>
    </div>
    <div class="basis-2/3 px-1">
      <div class="text-gray-800 font-semibold py-1 text-4xl">{`${firstname} ${name}`}</div>
      <div class="text-gray-600 font-semibold text-2xl">{`${job[lang]}`}</div>
      <Profile {lang} />
    </div>
  </div>
</div>
</section>
