---
const { lang } = Astro.props;

import * as config from "../content/_config.md";
const { firstname, name, job, aboutText, links } = config.frontmatter;

import LayeredBg from "../assets/layered-steps-haikei.svg";
const svgBg = `url(${LayeredBg.src})`;
---

<style define:vars={{ svgBg }}>
  .layered-bg {
    background-image: var(--svgBg);
    background-size: contain;
    background-position: left top;
    background-repeat: no-repeat;
  }
</style>

<section>
  <div class="flex items-center">
    <!-- <div class="bg-pink-500 h-52 basis-1/3 p-8 rounded-[10%] overflow-hidden"></div>
      IMAGE
    </div> -->
    <div class="layered-bg self-stretch basis-1/12 mr-4"></div>
    <div class="">
      <div class="text-4xl font-semibold">
        <div class="text-gray-800 py-1">{`${firstname} ${name}`}</div>
        <div class="text-gray-500">{`${job[lang]}`}</div>
      </div>
      <div class="text-gray-700">
        {`${aboutText[lang]}`}
      </div>
      <div class="flex space-x-3 mt-2 text-gray-500 uppercase text-xs">
        {
          links.map((link) => (
            <a
              href={link.url}
              class="duration-200 hover:text-gray-400"
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
