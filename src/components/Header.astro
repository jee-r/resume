---
const { lang } = Astro.props;

import * as config from "../content/_config.md";
const {
  firstname,
  name,
  job,
  aboutText,
  website,
} = config.frontmatter;
const website_url = new URL(website);

import LayeredBg from "../assets/layered-steps-haikei.svg";
import SocialLinks from "./SocialLinks.astro";
const svgBg = `url(${LayeredBg.src})`;
---

<style define:vars={{ svgBg }}>
  .layered-bg {
    background-image: var(--svgBg);
    background-size: contain;
    background-position: left top;
    background-repeat: no-repeat;
  }
</style>

<section>
  <div class="flex items-center">
    <!-- <div class="bg-pink-500 h-52 basis-1/3 p-8 rounded-[10%] overflow-hidden"></div>
      IMAGE
    </div> -->
    <div class="layered-bg self-stretch basis-4/12 mr-4"></div>
    <div class="">
      <div class="text-gray-800 font-semibold py-1 text-4xl">{`${firstname} ${name}`}</div>
      <div class="my-2"><SocialLinks/></div>
      <div class="text-gray-600 font-semibold text-2xl">{`${job[lang]}`}</div>
      <div class="text-gray-600 text-sm">
        {`${aboutText[lang]}`}
      </div>
    </div>
  </div>
</section>
