---
const { lang } = Astro.props;
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const t = useTranslations(lang);

const educations =
  lang == "en"
    ? await Astro.glob("../content/educations/en/*.md")
    : await Astro.glob("../content/educations/fr/*.md");
---

<section class="educations">
  <div class="section-title">{t("educations")}</div>
  <div class="timeline items-container flex flex-col w-full h-full">
    {
      educations.map((item) => (
        <>
          <div class="timeline-item item">
            <div class="flex justify-between items-center">
              <div class="item-title leading-tigh" >
                {item.frontmatter.name}
              </div>
            </div>
            <div class="flex text-xs font-light tracking-tighter justify-between">
              <div class="item-spec">{item.frontmatter.specs}</div>
              <div class="flex justify-end items-baseline gap-1">
                <div class="">{item.frontmatter.school}</div>
                <div class="font-bold">{item.frontmatter.year}</div>
              </div>
            </div>
            <div class="item-desc">{item.frontmatter.desc}</div>
            <div class="item-content">
              <item.Content />
              </div>
              </div>
        </>
      ))
    }
  </div>
</section>
