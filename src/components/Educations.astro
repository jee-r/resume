---
const { lang } = Astro.props;
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const t = useTranslations(lang);

const educations =
  lang == "en"
    ? await Astro.glob("../content/educations/en/*.md")
    : await Astro.glob("../content/educations/fr/*.md");
---

<section class="educations">
  <div class="section-title">{t("educations")}</div>
  <div class="items-container">
    {
      educations.map((item) => (
        <div class="item">
          <div class="flex justify-between items-baseline">
            <div class="font-semibold item-title">{item.frontmatter.name}</div>
            <div class="flex text-sm justify-end items-baseline">
              <div class="font-extralight text-xs mr-2">
                {item.frontmatter.city}
              </div>
              <div class="font-md">{item.frontmatter.year}</div>
            </div>
          </div>
          <div class="item-subtitle">{item.frontmatter.specs}</div>
          <div class=" item-content">
            <item.Content />
          </div>
        </div>
      ))
    }
  </div>
</section>
